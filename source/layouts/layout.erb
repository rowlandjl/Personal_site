<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Middleman" %></title>

    <link href='//fonts.googleapis.com/css?family=Lato:300,400' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

    <%= stylesheet_link_tag :site %>
    <%= javascript_include_tag :all %>
  </head>

  <body class="<%= page_classes %>">
    <div class="container">
      <div class="row">
        <div class = "col-md-12 header-container text-center title">
          <h1>JESSICA ROWLAND</h1>
          <h3>Software Developer</h3>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 text-center">
          <ul class="navigation">
            <li>
              <a href="/index.html">HOME</a>
            </li>
            <li>
              <a href="about.html">ABOUT</a>
            </li>
            <li>
              <a href="projects.html">PROJECTS</a>
            </li>
            <li>
              <a href="contact.html">CONTACT</a>
            </li>
          </ul>
        </div>
      </div>
      <div class="row main-container">
        <%= yield %>
      </div>
      <div class="row footer-container">
        <div class="col-xs-6 col-md-6">Jessica Rowland &copy; 2016</div>
        <div class="col-xs-6 col-md-6 text-right">
          <a href="https://github.com/rowlandjl"><img src="images/github1.jpg"></a>
          <a href="https://www.linkedin.com/in/jessicalrowland"><img src="images/linkedin.jpg"></a>
          <a href="https://twitter.com/jesssicarowland"><img src="images/twitter.jpg"></a>
          <a href="mailto:rowlandjl82@gmail.com"><img src="images/gmail.jpg"></a>
        </div>
      </div>
    </div>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    <script src="/javascripts/jquery.js"></script>
    <script type="text/javascript">
      var contactForm;
      if(contactForm = $('#con-form')){
        $(contactForm).on('submit', function(e){
          e.preventDefault();
          $.ajax({
            url: $(contactForm).attr('action'),
            type: 'POST',
            data: $(contactForm).serialize()
          }).success(function(){
            alert('Thanks! I will be in contact shortly.');
            $(".form-control").val('');
          });
        });
      };
    </script>
  </body>
</html>
